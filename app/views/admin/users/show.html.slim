              .progress-bar.progress-bar-info ng-class=("type &amp;&amp; 'progress-bar-' + type") ng-transclude="" style=("width: 68%;") 
        tr
          td 4
          td
            span.color-info
              i.fa.fa-level-up
            | Q300
          td Jonah Benny
          td
