              .progress-bar.progress-bar-warning ng-class=("type &amp;&amp; 'progress-bar-' + type") ng-transclude="" style=("width: 52%;") 
        tr
          td 5
          td
            span.color-danger
              i.fa.fa-level-down
            | RVNG
          td Daly Royle
          td
            span.label.label-warning Suspended
          td
            .progressbar-xs.no-margin.progress.ng-isolate-scope type="danger" value="77" 
              .progress-bar.progress-bar-danger ng-class=("type &amp;&amp; 'progress-bar-' + type") ng-transclude="" style=("width: 77%;") 
