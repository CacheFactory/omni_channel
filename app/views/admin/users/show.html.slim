              .progress-bar.progress-bar-success ng-class=("type &amp;&amp; 'progress-bar-' + type") ng-transclude="" style=("width: 34%;") 
        tr
          td 3
          td
            span.color-warning
              i.fa.fa-level-down
            | DARK
